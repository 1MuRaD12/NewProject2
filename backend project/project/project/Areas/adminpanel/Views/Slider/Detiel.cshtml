@model Slider
@{
    ViewData["Title"] = "Detiel";
}

<div class="col-lg-12 grid-margin stretch-card">

    <div class="table-responsive pt-5">
        <table class="table table-dark mt-2">
            <thead>
                <tr>
                    <th>
                        Id
                    </th>
                    <th>
                        Image
                    </th>
                    <th>
                        Title
                    </th>
                    <th>
                        Titles
                    </th>
                    <th>
                        Subtitle
                    </th>
                    <th>
                        More
                    </th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        @Model.Id
                    </td>
                    <td>
                        <img src="~/assets/images/@Model.Image" style="width:70px; height:50px;">
                    </td>
                    <td>
                        @Model.Title
                    </td>
                    <td>
                        @Model.Titles
                    </td>
                    <td>
                        @if (@Model.SubTitle.Length >= 30)
                        {
                            @(Model.SubTitle.Substring(0,30).ToString() +"...") ;
                           
                        }
                    </td>
                    <td>
                        @Model.More
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

